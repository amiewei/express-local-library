extends layout

block content
  h1 #{title}: #{book_instances.book.title}
  p Status: #{book_instances.status}
  p Imprint: #{book_instances.imprint}

  p Do you really want to delete this Book Instance?

  form(method='POST' action='')
    div.form-group
      input#authorid.form-control(type='hidden',name='bookinstanceid', required='true', value=book_instances._id )

    button.btn.btn-primary(type='submit') Delete
